@model List<Service>
@{
    int counter = 0;
}

<div class="container">
    <div class="d-flex" style="justify-content: space-around; align-items:center">
        <h1>Services</h1>
        <a class="btn btn-primary" asp-action="Create" asp-controller="service">Create</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Icon</th>
                <th scope="col">Title</th>
                <th scope="col">Desc</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Service service in Model)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@service.Id</td>
                    <td>@Html.Raw(@service.Icon)</td>
                    <td>@service.Title</td>
                    <td>@service.Desc</td>
                    <td>
                        <a class="btn btn-primary" asp-action="update" asp-controller="service" asp-route-id ="@service.Id">Update</a>
                        <a class="btn btn-danger" asp-action="delete" asp-controller="service">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>