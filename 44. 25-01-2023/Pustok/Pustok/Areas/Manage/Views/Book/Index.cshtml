@model PaginatedList<Book>

@{
    ViewData["Title"] = "Index";
    int counter = ((Model.ActivePage-1) * 2);
}
@section css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.16/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="container" style="display:flex; justify-content:space-between; align-items:center; margin-left:10px">
    <h1>Index</h1>
    <a asp-action="create" asp-controller="book" class="btn btn-success">Create a book</a>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">CostPrice</th>
                <th scope="col">SalePrice</th>
                <th scope="col">BookCode</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book book in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@book.Name</td>
                    <td>@book.Costprice</td>
                    <td>@book.SalePrice</td>
                    <td>@book.Code</td>
                    <td>
                        <a asp-action="update" asp-controller="book" asp-route-id="@book.Id" class="btn btn-info">Update</a>
                        <a asp-action="delete" asp-controller="book" asp-route-id="@book.Id" class="btn btn-danger delete-button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div>
   <form method="get">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @if(Model.HasPrevious){
                    <li class="page-item">
                    <a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage-1)" tabindex="-1">Previous</a>
                </li>
                }
                @for (int i = 1; i <= Model.TotalPageCount; i++)
                {
                    <li class="page-item @(Model.ActivePage == i ? "active" : "")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                }
               @if(Model.HasNext){
                    <li class="page-item">
                        <a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage+1)">Next</a>
                    </li>
               }
            </ul>
        </nav>
   </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.16/sweetalert2.min.js" integrity="sha512-4aFcnPgoxsyUPgn8gNinplVIEoeBizjYPTpmOaUbC3VZQCsRnduAOch9v0Pn30yTeoWq1rIZByAE4/Gg79VPEA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}