@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
@section css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.16/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<div class="container" style="display:flex; justify-content:space-between; align-items:center; margin-left:10px">
    <h1>Index</h1>
    <a asp-action="create" asp-controller="slider" class="btn btn-success">Create a book</a>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title1</th>
                <th scope="col">Title2</th>
                <th scope="col">RedirectUrl</th>
                <th scope="col">Order</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Slider slider in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Title1</td>
                    <td>@slider.Title2</td>
                    <td>@slider.RedirectUrl</td>
                    <td>@slider.Order</td>
                    <td>
                        <div style="width:200px">
                            <img style="max-width:100%" src="~/uploads/sliders/@slider.Image">
                        </div>
                    </td>
                    <td>
                        <a asp-action="update" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-info">Update</a>                                                                      
                        <a asp-action="delete" asp-controller="slider"  asp-route-id="@slider.Id" data-id = "@slider.Id" class="btn btn-danger delete-button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.16/sweetalert2.min.js" integrity="sha512-4aFcnPgoxsyUPgn8gNinplVIEoeBizjYPTpmOaUbC3VZQCsRnduAOch9v0Pn30yTeoWq1rIZByAE4/Gg79VPEA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
